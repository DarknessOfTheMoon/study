<Application x:Class="ChainOfStores.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChainOfStores"
             StartupUri="Views/Window/MainWindow.xaml">
    <Application.Resources>
        
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="Width" Value="210"></Setter>
            <Setter Property="Height" Value="35"></Setter>
            <Setter Property="Margin" Value="0, 0, 0, 35"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderBrush" Value="#874800"></Setter>
            <Setter Property="Foreground" Value="#874800"></Setter>
        </Style>

        <Style x:Key="AddSupplyTXB" TargetType="TextBlock">
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="FontFamily" Value="Lobster-Regular"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
